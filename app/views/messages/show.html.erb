<% provide :title, @message.content %>

<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Message
        </h3>
      </div>

      <div class="panel-body panel-body-msg">
        <%= render 'message', message: @message %>
      </div>

      <% if current_user == @message.publisher %>
        <div class="panel-footer">
          <%= link_to 'Delete', message_path(@message, return_to: user_path(@message.publisher)), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
