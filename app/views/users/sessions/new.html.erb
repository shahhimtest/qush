<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          Sign In
        </h3>
      </div>

      <div class="panel-body">
        <%= simple_form_for User.new, url: session_path do |f| %>
          <%= f.input :email, required: false %>
          <%= f.input :password %>
          <div class="checkbox">
            <label>
              <%= check_box_tag :permanent %> Stay signed in
            </label>
          </div>
          <%= f.button :submit, 'Signin' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
