<!DOCTYPE html>
<html>
  <head>
    <title>
      Qush
      <% if content_for?(:title) %>
        - <%= yield(:title) %>
      <% end %>
    </title>
    <%= csrf_meta_tags %>

    <%= meta_tag :viewport, 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' %>
    <%= meta_tag :description, 'Back to short and important messages with quality. On Qush every user can push just one 140 chars message every 24 hours.' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= render 'shared/head/favicons' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <%= render 'shared/messages' %>

    <div class="container-fluid">
      <%= yield %>
    </div>

    <%= render 'shared/footer' %>

    <!-- Global Site Tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-107152891-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments)};
      gtag('js', new Date());

      gtag('config', 'UA-107152891-1');
    </script>

  </body>
</html>
